<UserControl x:Class="NINA.Plugins.Fujifilm.UI.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:NINA.Plugins.Fujifilm.Settings"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="600">
    <UserControl.Resources>
        <!-- Theme-aware TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="MinHeight" Value="22" />
        </Style>
        
        <!-- Theme-aware ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
            <Style.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Camera Status Section (visible when connected) -->
            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                    Padding="12"
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Camera Status" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Battery:" Grid.Row="0" Grid.Column="0" Margin="0,0,12,4" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding BatteryStatusText}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" />
                        <TextBlock Text="Lens:" Grid.Row="1" Grid.Column="0" Margin="0,0,12,0" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding LensStatusText}" Grid.Row="1" Grid.Column="1" />
                    </Grid>
                    <TextBlock Text="Select a camera and click 'Load Capabilities' to see status"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                               FontStyle="Italic"
                               FontSize="11"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <!-- Main Settings Section -->
            <TextBlock Text="Camera Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20" />

            <!-- Exposure Settings -->
            <TextBlock Text="Exposure" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,24">
                <!-- Checkbox with clear label alignment -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <CheckBox IsChecked="{Binding Settings.ForceManualExposureMode, Mode=TwoWay}" 
                              VerticalAlignment="Center"
                              Margin="0,0,8,0" />
                    <TextBlock Text="Force Manual Exposure Mode" 
                               VerticalAlignment="Center" />
                </StackPanel>
                
                <!-- Input field with label -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Bulb Release Delay (ms):" 
                               VerticalAlignment="Center" 
                               Margin="0,0,12,0" />
                    <TextBox Grid.Column="1" 
                             Width="100" 
                             HorizontalAlignment="Left"
                             Text="{Binding Settings.BulbReleaseDelayMs, Mode=TwoWay}" />
                </Grid>
            </StackPanel>

            <!-- Output Settings -->
            <TextBlock Text="Output" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <CheckBox IsChecked="{Binding Settings.SaveNativeRafSidecar, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0" />
                    <TextBlock Text="Save native RAF files (recommended)"
                               VerticalAlignment="Center" 
                               FontWeight="SemiBold" />
                </StackPanel>
                <TextBlock TextWrapping="Wrap"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                           FontSize="11"
                           Margin="24,0,0,12">
                    <Run FontWeight="SemiBold" Foreground="Orange">IMPORTANT for X-Trans cameras:</Run>
                    RAF files are required for proper processing in PixInsight and other stacking software.
                    The FITS/XISF files contain a synthetic preview conversion.
                    RAF files preserve the true sensor data for accurate debayering.
                    <LineBreak />
                    Files are saved to your NINA image directory.
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Settings.EnableExtendedFitsMetadata, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0" />
                    <TextBlock Text="Annotate FITS headers with Fuji metadata"
                               VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- Preview Quality Settings -->
            <TextBlock Text="Preview Quality" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,24">
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Demosaic Quality:"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />
                    <ComboBox Grid.Column="1"
                              Width="180"
                              HorizontalAlignment="Left"
                              SelectedValue="{Binding Settings.PreviewDemosaicQuality, Mode=TwoWay}"
                              SelectedValuePath="Tag">
                        <ComboBoxItem Content="Fast (~1s)" Tag="{x:Static local:DemosaicQuality.Fast}" />
                        <ComboBoxItem Content="Balanced (~4s)" Tag="{x:Static local:DemosaicQuality.Balanced}" />
                        <ComboBoxItem Content="High Quality (~15s)" Tag="{x:Static local:DemosaicQuality.HighQuality}" />
                    </ComboBox>
                </Grid>
                <TextBlock TextWrapping="Wrap"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                           FontSize="11"
                           Margin="0,0,0,0">
                    <Run FontWeight="SemiBold">Fast:</Run> Linear interpolation. Fastest download, slight softness. Ideal for astrophotography.
                    <LineBreak />
                    <Run FontWeight="SemiBold">Balanced:</Run> VNG algorithm. Good edge handling with moderate speed.
                    <LineBreak />
                    <Run FontWeight="SemiBold">High Quality:</Run> AHD algorithm. Best edges but slowest. Use for critical framing.
                    <LineBreak />
                    <LineBreak />
                    <Run FontStyle="Italic">This only affects the preview in NINA. Your saved RAW files are unaffected.</Run>
                </TextBlock>
            </StackPanel>

            <!-- Focus Settings -->
            <TextBlock Text="Focus" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,24">
                <!-- Checkbox with clear label alignment -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <CheckBox IsChecked="{Binding Settings.ForceManualFocusMode, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0" />
                    <TextBlock Text="Force Manual Focus Mode"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Input field with label -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Focus Backlash Steps:"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />
                    <TextBox Grid.Column="1"
                             Width="100"
                             HorizontalAlignment="Left"
                             Text="{Binding Settings.FocusBacklashSteps, Mode=TwoWay}" />
                </Grid>
            </StackPanel>

            <!-- Advanced Settings (Collapsible) -->
            <Expander Header="Advanced" Margin="0,0,0,20" IsExpanded="False">
                <StackPanel Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <CheckBox IsChecked="{Binding Settings.EnableSdkTrace, Mode=TwoWay}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0" />
                        <TextBlock Text="Enable SDK Trace (for debugging)" 
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <TextBlock Text="Camera Discovery" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <Button Content="Refresh Cameras" 
                            Width="140" 
                            HorizontalAlignment="Left"
                            Command="{Binding RefreshCamerasAsyncCommand}" 
                            Margin="0,0,0,8" />
                    
                    <ListBox ItemsSource="{Binding AvailableCameras}" 
                             DisplayMemberPath="DisplayName" 
                             Height="100" 
                             Margin="0,0,0,12" 
                             SelectedItem="{Binding SelectedCamera, Mode=TwoWay}" />
                    
                    <Button Content="Load Capabilities" 
                            Width="140" 
                            HorizontalAlignment="Left"
                            Command="{Binding LoadCapabilitiesAsyncCommand}" 
                            Margin="0,0,0,12" />
                    
                    <TextBlock Text="Capabilities" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" 
                            BorderThickness="1" 
                            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
                            Padding="8"
                            CornerRadius="2">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                            <TextBlock Text="{Binding CapabilitiesSummary}" 
                                       TextWrapping="Wrap" 
                                       FontFamily="Consolas" 
                                       FontSize="11"
                                       Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Expander>

            <!-- Action Buttons -->
            <Separator Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" 
                        Width="100" 
                        Height="32"
                        Command="{Binding SaveCommand}" 
                        Margin="0,0,8,0" />
                <Button Content="Export Diagnostics" 
                        Width="140" 
                        Height="32"
                        Command="{Binding ExportDiagnosticsAsyncCommand}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
